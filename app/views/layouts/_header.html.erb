<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="brand" href= "/">
        TaskDeck
      </a>
      <nav>



      <% if signed_in? %>

      <% if !current_user.organization_id.nil? %>
        <ul class="nav">
          <li class="active">
            <a><i class=" icon-globe icon-white"></i><%= " " + current_user.organization.full_name %></a>
          </li>
        </ul>
      <% end %>
      <div class="btn-group pull-right">

      <a button class="btn" href="/">        
        <i class="icon-home"></i>
          My TaskDeck
      </button></a>
      <a button class="btn" href="/signout">Sign out</button></a>
      </div>

        <ul class="nav pull-right">

          <% notifs = Notification.where(user_id: current_user.id, seen: false).order("created_at DESC") %>

          <ul class="nav">
            <li class="dropdown">
              <a href="#"
                    class="dropdown-toggle"
                    data-toggle="dropdown">
                    Notifications
                    <% if notifs.count > 0 %>
                    <span class="label label-important"><%= notifs.count %></span>
                    <% end  %>
                    <b class="caret"></b>
              </a>



              <ul class="dropdown-menu">
                <li class="divider"></li>
                <% if notifs.empty? %>
                <center>No unread notifications.<br /><br /></center>
                <% end %>
                <% notifs.each do |n| %>
                <li><a href=<%= n.target %>><%= n.description %><br /><%= time_ago_in_words(n.created_at) + " ago" %></a></li>
                <li class="divider"></li>
                <% end %>
                <li>
                  <div class="pull-right">
                    <%= form_for :notification, :url => url_for(:controller => 'notifications', 
                                  :action => 'clearnotifs') do |f| %>
                    <%= f.hidden_field :id, :value => current_user.id %>                                    
                    <%= f.submit "Clear", class: "btn btn-mini" %>
                    <% end %>
                  </div>
                  <center>
                  <div class="pull-left">                  
                    <%= form_for :notification, :url => url_for(:controller => 'notifications', 
                                  :action => 'index') do |f| %>
                    <%= f.hidden_field :id, :value => current_user.id %>                                 
                    <%= f.submit "View All", class: "btn btn-mini" %>
                    <% end %>
                  </div>

                  </center>
                </li>
              </ul>
            </li>
          </ul>



          <li>
            <a href="/"><i class="icon-ok-sign icon-white"></i><%= " " + current_user.name %></a>
          </li>
        </ul>

      <% else %>
        <div class="btn-group pull-right">
		      <a button class="btn" href="/signin">Sign in</button></a>
        </div>

      <% end %>


      </nav>
    </div>
  </div>
</header>