      <section>
        <h3><%= current_user.name %></h3> 
        <strong>
          <%= current_user.email %><br />
          <% if !current_user.team_id.nil? %>
            <%= current_user.team.name %><br />
          <% end %>
          <%= current_user.organization.full_name %><br />
        </strong>
      </section>
      <br />
      <br />


      <section>
        <ul class="nav nav-list">
          <li class="nav-header">
            Menu
          </li>
          <% if @active == 1 %>
          <li class="active">
          <% else %>
          <li>
          <% end %>
            <a href="/">
            <i class="icon-home"></i>
              TaskDeck
            </a>
          </li>


          <% if @active == 2 %>
          <li class="active">
          <% else %>
          <li>
          <% end %>
            <a href="/teampanel">
            <i class="icon-user"></i>
              Team Panel
            </a>
          </li>



          <% if @active == 3 %>
          <li class="active">
          <% else %>
          <li>
          <% end %>
            <a href="/orgpanel">
            <i class="icon-briefcase"></i>
              <%= current_user.organization.full_name %>
            </a>
          </li>




          <% if @active == 4 %>
          <li class="active">
          <% else %>
          <li>
          <% end %>
            <a href="/settings">
            <i class="icon-wrench"></i>
              Settings
            </a>
          </li>

          <% if current_user.admin %>
