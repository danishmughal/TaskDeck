<% if current_user.organization_id? %>
<br />
<div class="row-fluid">
    <aside class="span4">
      <%= render 'shared/side_menu' %>
    </aside>


    <div class="span8">
      <%= render 'tasks/taskdeck' %>
    </div>


</div>



